<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:myapp="http://schemas.android.com/apk/res/com.glennbech.events"
              android:orientation="vertical"
              android:layout_width="fill_parent" android:layout_weight="1"
              android:layout_height="fill_parent" android:background="#FFFFFF">

    <RelativeLayout android:id="@+id/topmenu" android:layout_height="wrap_content" android:layout_width="fill_parent"
                    android:layout_marginTop="5px"
                    android:background="@drawable/softwhitegradient">

        <ImageButton android:id="@+id/back" android:src="@drawable/home"
                     android:layout_height="wrap_content" android:layout_alignParentLeft="true"
                     android:layout_width="wrap_content"/>

        <TextView android:id="@+id/caption" android:textSize="12pt" android:textStyle="bold"
                  android:layout_alignParentRight="true" android:gravity="center_vertical"
                  android:layout_height="wrap_content" android:layout_marginRight="10px"
                  android:layout_width="wrap_content"/>

    </RelativeLayout>

    <View android:layout_height="2px" android:layout_width="fill_parent" android:padding="1px"
          android:background="#DDDDDD"/>

    <com.admob.android.ads.AdView
            android:id="@+id/ad" android:padding="1px"
            android:layout_alignParentBottom="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            myapp:backgroundColor="#000000"
            myapp:primaryTextColor="#FFFFFF"
            myapp:secondaryTextColor="#CCCCCC"/>

    <View android:layout_height="2px" android:layout_width="fill_parent" android:padding="1px"
          android:background="#DDDDDD"/>

    <ListView android:id="@+id/favoritelist"
              android:layout_height="wrap_content"
              android:layout_width="fill_parent"
              android:layout_weight="1.0" android:cacheColorHint="#00000000"/>


</LinearLayout>