<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:id="@+id/itemrow"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingBottom="6px" android:paddingTop="6px"
        android:orientation="horizontal"
        android:layout_height="wrap_content" android:background="@drawable/softwhitegradient"
        android:layout_width="fill_parent" android:paddingLeft="5px" android:focusable="false">

    <LinearLayout android:orientation="vertical"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content" android:layout_weight="1">

        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#222222" android:layout_marginRight="5px"
                android:textSize="17sp" android:layout_alignParentTop="true" android:layout_toRightOf="@+id/sceneicon"
                />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/location"
                  android:textSize="13sp"
                  android:textStyle="italic"
                  android:textColor="#222222" android:layout_below="@+id/title" android:layout_marginRight="5px"
                  android:layout_toRightOf="@+id/sceneicon"/>

        <TextView android:layout_width="wrap_content" android:layout_marginRight="5px"
                  android:layout_height="wrap_content"
                  android:id="@+id/date"
                  android:textSize="13sp"
                  android:textColor="#222222"
                  android:layout_below="@+id/location" android:layout_toRightOf="@+id/sceneicon"/>

    </LinearLayout>

    <View android:layout_height="fill_parent" android:layout_width="2px"
          android:background="#DDDDDD"/>

    <ImageButton android:id="@+id/homebutton"
                 android:background="#00000000"  android:layout_marginLeft="5px" android:layout_marginRight="5px"
                 android:layout_height="wrap_content" android:src="@drawable/info"
                 android:layout_width="wrap_content"/>

    <View android:layout_height="fill_parent" android:layout_width="2px"
          android:background="#DDDDDD"/>


    <ImageButton android:id="@+id/starbutton" android:layout_gravity="right" android:layout_marginLeft="5px"
                 android:layout_alignParentRight="true" android:text="Favoritt" android:background="#00000000"
                 android:layout_height="wrap_content" android:layout_marginRight="13px"
                 android:layout_width="wrap_content"/>

</LinearLayout>